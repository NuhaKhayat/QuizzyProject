<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Q#: The Question Is Here"
        android:id="@+id/display_question_textView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:padding="7dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_answer_RadioGroup"
        android:layout_marginLeft="35dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display_answer_1_radioButton"
            android:textSize="16dp"
            android:layout_margin="6dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display_answer_2_radioButton"
            android:textSize="16dp"
            android:layout_margin="6dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display_answer_3_radioButton"
            android:layout_margin="6dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display_answer_4_radioButton"
            android:textSize="16dp"
            android:layout_margin="6dp"/>
    </RadioGroup>

</LinearLayout>